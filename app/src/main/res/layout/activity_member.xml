<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Member">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/societe_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/logogsca" />

            <TextView
                android:id="@+id/societe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Nom de la société"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/societe_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Nom de la société"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/societe_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Adresse de la société"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/societe_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="03 80 00 00 00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/societe_sector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Secteur d'activité"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/societe_mainsector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Activité principale"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/societe_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="mail@adresse.fr"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/societe_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Site internet"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/member_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:paddingTop="50dp"
                app:srcCompat="@drawable/logogsca" />

            <TextView
                android:id="@+id/member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Nom du membre "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/membre_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Prénom du membre "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/membre_poste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Poste occupé"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/membre_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="06 00 00 00 00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/membre_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="mail@adresse.fr"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>